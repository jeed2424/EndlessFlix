{
  "manifest_version": 2,
  "name": "EndlessFlix",
  "description": "Check out extension website (GitHub) for more details",
  "version": "2.7",
  "browser_specific_settings": {
    "gecko": {
      "id": "EndlessFlix@jeed2424.com",
      "strict_min_version": "58.0"
    }
  },
  "permissions": [
    "*://*.netflix.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*"
      ],
      "js": [
        "js/libs/jquery.js",
        "js/selectors.js",
        "js/common.js",
        "NEN.js"
      ]
    }
  ],
  "icons": {
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/selectors.js",
      "js/common.js",
      "js/hot-reload.js"
    ]
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "EndlessFlix"
  },
  "default_locale": "en",
  "homepage_url": "https://github.com/jeed2424/EndlessFlix",
  "web_accessible_resources": [
    "js/*",
    "data/*"
  ]
}
